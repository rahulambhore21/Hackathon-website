# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/hackathon-platform
# For production, use your MongoDB Atlas URI or other production database
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/hackathon-platform

# JWT Configuration
JWT_SECRET=Rahul
JWT_EXPIRY=90h

# Email Configuration (for password reset and notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Hackathon Platform <your-email@gmail.com>

# AWS S3 Configuration (for file uploads)
# AWS_BUCKET_NAME=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=your-region

# Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5000000  # 5MB in bytes

# Logging
LOG_LEVEL=debug